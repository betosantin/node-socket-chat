<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<style>

    #chat{
        max-height: 500px;
        min-height: 500px;
        background-color: aliceblue;
        overflow-y: scroll;
    }

</style>


<body>
    <h1>Chat</h1>
    <div id="chat">


    </div>
    <br />

    <input type="text" name="" id="msg" class="form-control" placeholder="Mensagem">
    <input type="text" name="" id="username" class="form-control" placeholder="Digite o nome do usuÃ¡rio">
    <button onclick="enviar()" class="btn btn-primary btn-lg btn-block">Enviar</button>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js"></script>
<script>
    var socket = io("http://localhost:3000");

    socket.on("disconnect", () => {
        console.log("Desconectado...");
    });

    socket.on("showmsg", (data) => {
        var chatId = document.getElementById("chat");

        var paragrafo = document.createElement("p");

        paragrafo.innerHTML = data.username + ": " + data.msg;
        chatId.append(paragrafo);
    });

    function enviar() {
        var msgField = document.getElementById("msg");
        var userNameField = document.getElementById("username");

        var msg = msgField.value;
        var username = userNameField.value;

        socket.emit("msg", { msg: msg, username: username });
    }

</script>

</html>